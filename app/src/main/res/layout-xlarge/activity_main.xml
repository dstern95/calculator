<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.fandm.dstern.calculator.MainActivity">
    <TextView android:id="@+id/main_tv_output"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=""
        android:textSize="40dp"
        android:gravity="right"
        android:textAlignment="gravity"
        />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/buttongrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_tv_output"
        android:rowCount = "4"
        android:columnCount="4"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"

        >
        <Button android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:onClick="buttonPress"
            />

        <Button android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:onClick="buttonPress"
            />
        <Button android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:onClick="buttonPress"
            />
        <Button android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:onClick="maths"
            />
        <Button android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:onClick="buttonPress"
            />
        <Button android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:onClick="buttonPress"
            />
        <Button android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:onClick="buttonPress"
            />
        <Button android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:onClick="maths"
            />
        <Button android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:onClick="buttonPress"
            />
        <Button android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:onClick="buttonPress"
            />
        <Button android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:onClick="buttonPress"
            />
        <Button android:id="@+id/mult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:onClick="maths"
            />
        <Button android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:onClick="buttonPress"
            />
        <Button android:id="@+id/decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:onClick="buttonPress"
            />
        <Button android:id="@+id/exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="^"
            android:onClick="maths"
            />

        <Button android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:onClick="maths"
            />
    </GridLayout>


    <Button android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enter"
        android:onClick="enter"
        android:layout_marginTop="273dp"
        android:layout_toLeftOf="@+id/clear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button android:id="@+id/clear"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="clear"
        android:onClick="clear"
        android:layout_marginTop="273dp"
        android:layout_alignLeft="@+id/history"
        android:layout_alignStart="@+id/history" />

    <Button android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="History"
        android:onClick="history"
        />



</RelativeLayout>
